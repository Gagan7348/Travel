rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true;  // Anyone can view profile pictures
      allow write: if request.auth != null && request.auth.uid == userId;  // Only the user can modify their own profile picture
      allow delete: if request.auth != null && request.auth.uid == userId;  // Only the user can delete their own profile picture
    }
  }
} 